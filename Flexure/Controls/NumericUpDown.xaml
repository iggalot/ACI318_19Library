<UserControl x:Class="ACI318_19Library.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="25">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- TextBox with validation border -->
        <TextBox Name="TextBoxValue" Grid.Column="0"
                 Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalContentAlignment="Right"
                 ToolTip="{Binding ErrorMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 BorderThickness="1"
                 TextChanged="TextBoxValue_TextChanged"/>

        <!-- Up/Down Buttons -->
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Content="▲" Height="12" Padding="0" Click="BtnUp_Click"/>
            <Button Content="▼" Height="12" Padding="0" Click="BtnDown_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
