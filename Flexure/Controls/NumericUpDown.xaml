<UserControl x:Class="ACI318_19Library.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100" Height="25">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- TextBox with validation background -->
        <TextBox x:Name="TextBoxValue"
                 Grid.Column="0"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Center"
                 BorderThickness="1"
                 Text="0" />

        <!-- Up/Down Buttons -->
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0">
            <Button Content="▲" Height="12" Padding="0" Click="BtnUp_Click"/>
            <Button Content="▼" Height="12" Padding="0" Click="BtnDown_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
