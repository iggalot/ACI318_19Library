<UserControl x:Class="ACI318_19Library.CrossSectionInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ACI318_19Library"
             MaxWidth="400">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="Auto"/>
            <!-- Tension Rebars -->
            <RowDefinition Height="Auto"/>
            <!-- Compression Rebars -->
            <RowDefinition Height="*"/>
            <!-- filler -->
        </Grid.RowDefinitions>

        <!-- Inputs Grid -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Width -->
            <TextBlock Text="Width (in):" Grid.Row="0" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="0" Grid.Column="1"
                                 Value="{Binding Width}" Minimum="1" Maximum="60" Step="0.25"/>
            <!-- Depth -->
            <TextBlock Text="Depth (in):" Grid.Row="1" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="1" Grid.Column="1"
                                 Value="{Binding Depth}" Minimum="1" Maximum="100" Step="0.25"/>
            <!-- Tension Cover -->
            <TextBlock Text="Tension Cover (in):" Grid.Row="2" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="2" Grid.Column="1"
                                 Value="{Binding TensionCover}" Minimum="0.5" Maximum="6" Step="0.125"/>
            <!-- Compression Cover -->
            <TextBlock Text="Compression Cover (in):" Grid.Row="3" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="3" Grid.Column="1"
                                 Value="{Binding CompressionCover}" Minimum="0.5" Maximum="6" Step="0.125"/>
            <!-- Side Cover -->
            <TextBlock Text="Side Cover (in):" Grid.Row="4" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="4" Grid.Column="1"
                                 Value="{Binding SideCover}" Minimum="0.5" Maximum="6" Step="0.125"/>
            <!-- Clear Spacing -->
            <TextBlock Text="Clear Spacing (in):" Grid.Row="5" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="5" Grid.Column="1"
                                 Value="{Binding ClearSpacing}" Minimum="0.5" Maximum="12" Step="0.125"/>
            <!-- f'c -->
            <TextBlock Text="f'c (psi):" Grid.Row="6" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="6" Grid.Column="1"
                                 Value="{Binding Fck}" Minimum="2000" Maximum="10000" Step="500"/>
            <!-- fy -->
            <TextBlock Text="fy (psi):" Grid.Row="7" Grid.Column="0" Margin="2"/>
            <local:NumericUpDown Grid.Row="7" Grid.Column="1"
                                 Value="{Binding Fy}" Minimum="40000" Maximum="120000" Step="5000"/>
        </Grid>

        <!-- Tension Rebars -->
        <Expander Grid.Row="1" Header="Tension Rebars" IsExpanded="True" Margin="0,8,0,0">
                <StackPanel>
                    <DataGrid x:Name="TensionDataGrid"
                              ItemsSource="{Binding TensionRebars}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              MinHeight="100">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bar Size" Binding="{Binding BarSize}" Width="*"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="*"/>
                            <DataGridTextColumn Header="Depth (in)" Binding="{Binding Depth}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Button Content="Add" Width="50" Click="BtnAddTension_Click"/>
                        <Button Content="Remove" Width="60" Margin="4,0,0,0" Click="BtnRemoveTension_Click"/>
                    </StackPanel>
                </StackPanel>
        </Expander>

        <!-- Compression Rebars -->
        <Expander Grid.Row="2" Header="Compression Rebars" IsExpanded="True" Margin="0,8,0,0">
                <StackPanel>
                    <DataGrid x:Name="CompressionDataGrid"
                              ItemsSource="{Binding CompressionRebars}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              MinHeight="100">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bar Size" Binding="{Binding BarSize}" Width="*"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="*"/>
                            <DataGridTextColumn Header="Depth (in)" Binding="{Binding Depth}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Button Content="Add" Width="50" Click="BtnAddComp_Click"/>
                        <Button Content="Remove" Width="60" Margin="4,0,0,0" Click="BtnRemoveComp_Click"/>
                    </StackPanel>
                </StackPanel>
        </Expander>

    </Grid>
</UserControl>
