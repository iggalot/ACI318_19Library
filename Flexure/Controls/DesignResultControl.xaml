<UserControl x:Class="ACI318_19Library.DesignResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ACI318_19Library"
             Height="Auto" Width="Auto">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!-- Left: Numerical Results -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Design Results" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="3" 
                           Text="{Binding Result.crossSection.SectionSummaryString, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}"
                           FontWeight="Bold" FontSize="14" Margin="8,0,0,8"/>


            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <!-- Label -->
                    <ColumnDefinition Width="170"/>
                    <!-- Value -->
                    <ColumnDefinition Width="100"/>
                    <!-- Second label -->
                    <ColumnDefinition Width="80"/>
                    <!-- Second value -->
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="ϕMn (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.PhiMn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Mn (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Result.Mn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <!-- Row 1 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="c (in):" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Result.NeutralAxis, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F2}}" Margin="2"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="a (in):" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Result.a, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F2}}" Margin="2"/>

                <!-- Row 2 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="ϕ:" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Result.Phi, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F2}}" Margin="2"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="εt:" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Result.eps_T, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F5}}" Margin="2"/>

                <!-- Row 3 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="εy:" Margin="2"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Result.crossSection.Eps_Y, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F5}}" Margin="2"/>

                <TextBlock Grid.Row="3" Grid.Column="2" Text="fy (psi):" Margin="2"/>
                <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Result.crossSection.Fy_psi, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <!-- Row 4 -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="εc:" Margin="2"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Result.crossSection.EpsilonCu, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F5}}" Margin="2"/>

                <TextBlock Grid.Row="4" Grid.Column="2" Text="f'c (psi):" Margin="2"/>
                <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Result.crossSection.Fck_psi, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <!-- Row 5 -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Tens Bars:" Margin="2"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Result.TensionRebarSummary, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="2"/>

                <!-- Row 6 -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Comp Bars:" Margin="2"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Result.CompressionRebarSummary, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="2"/>
            </Grid>
        </StackPanel>

        <!-- Right: Canvas -->
        <StackPanel Grid.Column="0" Grid.Row="1"  Orientation="Horizontal" Margin="0,10,0,0">
            <Canvas x:Name="cnvSection" Height="200" Width="200" HorizontalAlignment="Left" Margin="10"/>
            <Canvas x:Name="cnvStrainDiagram" Height="200" Width="200" HorizontalAlignment="Left" Margin="10"/>
            <!--<Canvas x:Name="cnvWhitneyBlock" Height="150" Width="150" HorizontalAlignment="Left" Background="LightCoral"/>-->
        </StackPanel>
    </Grid>
</UserControl>
