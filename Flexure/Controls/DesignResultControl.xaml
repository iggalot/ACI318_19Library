<UserControl x:Class="ACI318_19Library.DesignResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACI318_19Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Numerical results -->
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="4">
                <TextBlock Text="Design Results" FontWeight="Bold" FontSize="14"/>
                <!--<TextBlock Text="{Binding ResultSummary}" Margin="0,4,0,0"/>-->

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ϕMn (kip-in):" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.PhiMn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F0}}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Mn (kip-in):" Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.Mn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F0}}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="εt:" Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.eps_T, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F4}}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="ρ:" Grid.Row="3" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.RhoActual, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F4}}" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Tens Bars:" Grid.Row="4" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.TensionRebarSummary, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F4}}" Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Comp Bars:" Grid.Row="5" Grid.Column="0"/>
                    <TextBlock Text="{Binding Result.CompressionRebarSummary, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F4}}" Grid.Row="5" Grid.Column="1"/>
                </Grid>



            </StackPanel>
            <!-- Cross section canvas -->
                <Canvas x:Name="cnvSection" Height="100" Width="100" HorizontalAlignment="Left" Background="White"/>
        </StackPanel>

    </Grid>
</UserControl>
