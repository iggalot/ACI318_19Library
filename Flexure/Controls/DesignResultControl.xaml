<UserControl x:Class="ACI318_19Library.DesignResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACI318_19Library"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Numerical results -->
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="4">
                <TextBlock Text="Design Results" FontWeight="Bold" FontSize="14"/>
                <!--<TextBlock Text="{Binding ResultSummary}" Margin="0,4,0,0"/>-->

                <UniformGrid Columns="2" Rows="0" Margin="0,8,0,0">
                    <TextBlock Text="ϕMn (kip-in):"/>
                    <TextBlock Text="{Binding PhiMn, StringFormat={}{0:F0}}"/>

                    <TextBlock Text="Mn (kip-in):"/>
                    <TextBlock Text="{Binding Mn, StringFormat={}{0:F0}}"/>

                    <TextBlock Text="εt:"/>
                    <TextBlock Text="{Binding eps_T, StringFormat={}{0:F4}}"/>

                    <TextBlock Text="ρ:"/>
                    <TextBlock Text="{Binding RhoActual, StringFormat={}{0:F4}}"/>
                </UniformGrid>

            </StackPanel>
            <!-- Cross section canvas -->
                <Canvas x:Name="cnvSection" Height="100" Width="100" HorizontalAlignment="Left" Background="White"/>
        </StackPanel>

    </Grid>
</UserControl>
