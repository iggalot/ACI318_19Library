<Window x:Class="ACI318_19Library.RebarLayerInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Rebar Layer"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Bar Size:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,2"/>
        <ComboBox x:Name="BarSizeComboBox" Grid.Row="0" Grid.Column="1" Margin="4,2" MinWidth="120"/>

        <TextBlock Text="Count:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,2"/>
        <TextBox x:Name="CountTextBox" Grid.Row="1" Grid.Column="1" Margin="4,2"/>

        <TextBlock Text="Depth (in):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,2"/>
        <TextBox x:Name="DepthTextBox" Grid.Row="2" Grid.Column="1" Margin="4,2"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="70" Margin="4,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" Margin="4,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
