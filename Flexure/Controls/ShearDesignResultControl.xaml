<UserControl x:Class="ACI318_19Library.ShearDesignResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ACI318_19Library"
             Height="Auto" Width="Auto">
    
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!-- Left: Numerical Results -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Shear Design Results" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="3" 
                           Text="{Binding Result.crossSection.SectionSummaryString, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}"
                           FontWeight="Bold" FontSize="14" Margin="8,0,0,8"/>


            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <!-- Label -->
                    <ColumnDefinition Width="170"/>
                    <!-- Value -->
                    <ColumnDefinition Width="100"/>
                    <!-- Second label -->
                    <ColumnDefinition Width="80"/>
                    <!-- Second value -->
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="ϕVn (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.PhiVn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Vn (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Result.Vn, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <!-- Row 1 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Vc (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Result.Vc, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Vs (kip-in):" Margin="2"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Result.Vs, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:N0}}" Margin="2"/>

                <!-- Row 2 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Av/s:" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Result.Av_over_s, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F2}}" Margin="2"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="ϕ:" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Result.PhiFlexure, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0:F2}}" Margin="2"/>
           </Grid>
        </StackPanel>

        <!-- Right: Canvas -->
        <StackPanel Grid.Column="0" Grid.Row="1"  Orientation="Horizontal" Margin="0,10,0,0">
            <Canvas x:Name="cnvShearStirrupSection" Height="200" Width="200" HorizontalAlignment="Left" Margin="10"/>
            <!--<Canvas x:Name="cnvWhitneyBlock" Height="150" Width="150" HorizontalAlignment="Left" Background="LightCoral"/>-->
        </StackPanel>
    </Grid>
</UserControl>
